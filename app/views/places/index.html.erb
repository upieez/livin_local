    <!-- filter by tags -->
<form method = "GET" action= '/places?tag_id='>
  <div class="form-row align-items-center" id = "tagName">
    <div class="col-auto my-1">
        <p> Filter By:</p>
      <select name = "tag_id" class="custom-select mr-sm-2" id="places[tags]" onchange="this.form.submit()">
            <option selected>Choose...</option>
            <%@tags.each do |t| %>
            <option value=<%=t.id%>><%=t.name%></option>
            <% end %>
      </select>
    </div>
  </div>
</form>


<div id="card-container" class="row d-flex justify-content-around p-4 text-center">
<div class="card-columns">
    <% @places.each do |place| %>
        <a href="/places/<%= place.id %>">
            <div class="card bg-transparent text-white">
                <img class="card-img" src<%= cl_image_tag(place.img_url) %>
                <h5 class="card-title d-flex"><%=place.name%></h5>
            </div>
        </a>
    <% end %>
</div>
